                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </VideoView>

            ////////////////////////

            <TextView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
