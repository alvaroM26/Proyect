<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_small">
        </ImageView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="2dp">
        </View>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/press_hombro">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="2dp">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elegantTextHeight="true"
                android:paddingStart="10dp"
                android:text="@string/_1_realice_la_posici_n_inicial_n2_deber_alzar_la_barra_lo_m_s_alto_que_pueda_y_lograr_entonces_que_los_brazos_queden_totalmente_extendidos_n3_luego_deber_bajarla_lentamente_y_volver_a_la_posici_n_inicial_n4_repita_el_ejercicio_cuantas_veces_indique_su_plan_de_entrenamiento"
               tools:ignore="ExtraText,RtlSymmetry">

            </TextView>

            <VideoView
                android:id="@+id/video1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </VideoView>

            ////////////////////////

            <TextView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/pajaros">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="2dp">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elegantTextHeight="true"
                android:text="@string/_1_nos_colocamos_de_pie_con_las_piernas_separadas_del_ancho_de_los_hombros_aproximadamente_con_las_rodillas_ligeramente_flexionadas_n2_cogemos_las_mancuernas_en_semipronaci_n_mir_ndose_las_palmas_entre_si_n3_inclinamos_el_tronco_hacia_delante_manteniendo_la_espalda_recta_n4_los_brazos_deben_de_estar_colgando_con_los_codos_ligeramente_flexionados_n5_inspiramos_y_elevamos_los_brazos_de_manera_lateral_hasta_que_queden_paralelos_al_suelo_quedando_como_un_p_jaro_con_las_alas_extendidas_n6_mantenemos_1_segundo_y_descendemos_lentamente_mientras_espiramos_el_aire_hasta_llegar_a_nuestra_posici_n_inicial"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">
            </TextView>

            <VideoView
                android:id="@+id/video2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </VideoView>

            ////////////////////////

            <TextView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/elevacion_lateral">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="2dp">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elegantTextHeight="true"
                android:text="@string/_1_col_cate_de_pie_con_los_pies_separados_a_la_anchura_de_los_hombros_y_coge_dos_mancuernas_con_las_palmas_de_las_manos_mirando_cara_ti_y_los_brazos_estirados_n2_mant_n_las_rodillas_tenuemente_dobladas_n3_levanta_los_brazos_hacia_los_laterales_hasta_el_momento_en_que_est_n_paralelos_al_suelo_n_4_haz_una_pausa_con_los_brazos_en_su_punto_m_s_alto_y_vuelve_a_la_situaci_n_inicial"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">
            </TextView>

            <VideoView
                android:id="@+id/video3"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </VideoView>

            ////////////////////////

            <TextView
