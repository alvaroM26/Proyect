                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="@string/remo_a_la_cara_con_cuerda_en_polea_alta"
                android:textStyle="bold">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="2dp">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elegantTextHeight="true"
                android:paddingStart="10dp"
                android:text="@string/_1_agarra_las_dos_asas_que_tiene_la_cuerda_y_tira_de_ella_hacia_la_mitad_del_pecho_mientras_abres_los_codos_hacia_los_lados_n2_posteriormente_tira_de_las_manijas_hacia_afuera_para_estimular_los_m_sculos_exhala_durante_esta_parte_n3_estira_los_brazos_extendi_ndolos_de_forma_lenta_hacia_adelante_e_inhala"
